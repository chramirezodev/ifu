{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "cms/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/cms/(.*)",
      "dest": "/cms/$1"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/cms/public/uploads/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/cms/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "HOST": "0.0.0.0",
    "PORT": "1337",
    "DATABASE_CLIENT": "sqlite"
  },
  "ignoreCommand": "grep -q \"cms\" package.json"
} 